{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "screens/*": ["./src/screens/*"],
      "hooks/*": ["./src/hooks/*"],
      "utils/*": ["./src/utils/*"],
      "services/*": ["./src/services/*"],
      "types/*": ["./src/types/*"],
      "constants/*": ["./src/constants/*"],
      "assets/*": ["./assets/*"],
      "context/*": ["./src/context/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}
